
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // By default, deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Users can read their own profile. Admins can read any profile.
    // Sales reps can read customers they manage.
    match /users/{userId} {
      allow read: if request.auth.uid == userId 
                    || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
                    || (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'sales' && resource.data.managedBy == request.auth.uid);

      allow create: if (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin')
                      || (request.auth.uid == userId) // user self-signup
                      || (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'sales' && request.resource.data.managedBy == request.auth.uid);

      allow update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' 
                    || (request.auth.uid == userId && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'status', 'loyaltyPoints', 'membershipTier', 'totalSpent', 'outletId', 'managedBy']))
                    || (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'sales' && resource.data.managedBy == request.auth.uid && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'status', 'managedBy']));
    }


    // Point history can be read by the owner or an admin.
    // Creation is only allowed via server-side logic (transactions), but we allow client-side creation for POS.
    match /users/{userId}/points_history/{transactionId} {
        allow read: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
        allow create: if request.auth.uid == userId;
        allow update, delete: if false;
    }

    // Products can be read by anyone.
    // They can be created by vendors or admins.
    // They can only be updated by the vendor who owns it, or an admin.
    match /products/{productId} {
      allow read: if true;
      allow create: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['vendor', 'admin'];
      allow update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
                      || (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'vendor'
                          && resource.data.vendorId == request.auth.uid);
    }
    
    // Product reviews can be read by anyone.
    // They can be created by any logged-in user who purchased the product.
    // They can be updated/deleted by the owner or an admin.
    match /products/{productId}/reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId 
                      && exists(/databases/$(database)/documents/orders/{orderId})
                      && get(/databases/$(database)/documents/orders/{orderId}).data.customerId == request.auth.uid
                      && get(/databases/$(database)/documents/orders/{orderId}).data.status in ['delivered', 'fulfilled']
                      && get(/databases/$(database)/documents/orders/{orderId}).data.items.exists(item, item.productId == productId);
      allow update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' 
                            || request.auth.uid == resource.data.userId;
    }


    // Questions are publicly readable.
    // Logged-in users can create questions.
    // Any authenticated user can add an answer, but cannot change the original question.
    match /products/{productId}/questions/{questionId} {
        allow read: if true;
        allow create: if request.auth != null && request.resource.data.askedByUid == request.auth.uid;
        allow update: if request.auth != null;
    }

    // Orders can be read by the customer, assigned outlet, assigned rider or an admin.
    // Created only by the customer or their assigned sales rep.
    // Updated by admin, outlet manager (for early stages), or rider (for delivery stages).
    match /orders/{orderId} {
      allow read: if request.auth != null && (request.auth.uid == resource.data.customerId 
                    || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
                    || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.outletId == resource.data.assignedOutletId
                    || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.outletId == resource.data.pickupOutletId
                    || request.auth.uid == resource.data.riderId);
      allow create: if request.auth != null && (
                        request.auth.uid == request.resource.data.customerId 
                        || (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'sales' 
                            && request.resource.data.salesRepId == request.auth.uid
                            && get(/databases/$(database)/documents/users/$(request.resource.data.customerId)).data.managedBy == request.auth.uid
                           )
                      );
      allow update: if request.auth != null && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
                      || ( // Outlet manager
                         (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.outletId == resource.data.assignedOutletId || 
                          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.outletId == resource.data.pickupOutletId) &&
                         resource.data.status in ['new', 'preparing', 'pending_payment']
                       )
                      || ( // Rider
                         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'rider' &&
                         (
                           (resource.data.status == 'ready_for_pickup' && request.resource.data.status == 'out_for_delivery' && request.resource.data.riderId == request.auth.uid) ||
                           (resource.data.riderId == request.auth.uid && resource.data.status == 'out_for_delivery' && request.resource.data.status == 'delivered')
                         )
                       ));
    }

    // POS sales can be created and read by the outlet manager or an admin.
    match /pos_sales/{saleId} {
        allow read, create: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.outletId == request.resource.data.outletId
                             || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Outlets are publicly readable. Only admins can create or update them.
    match /outlets/{outletId} {
      allow read: if true;
      allow create, update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Store assets (hero images, banners) are publicly readable. Only admins can manage them.
    match /store_assets/{assetId} {
        allow read: if true;
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Stock requests can be created by vendors. They can be read by the vendor or an admin.
    // They can only be updated (approved/rejected) by an admin.
    match /stock_requests/{requestId} {
        allow read: if request.auth.uid == resource.data.vendorId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
        allow create: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'vendor' && request.auth.uid == request.resource.data.vendorId;
        allow update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Delivery challans can be read by the vendor, outlet manager, or admin.
    // Only admins can create or update them (simulating a system-level action).
     match /delivery_challans/{challanId} {
        allow read: if request.auth.uid == resource.data.vendorId 
                      || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.outletId == resource.data.outletId
                      || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
        allow create, update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Stock transfers can be read by involved outlets or admins.
    // Can be created by admins, or updated (dispatched) by the source outlet.
    match /stock_transfers/{transferId} {
        allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.outletId == resource.data.sourceOutletId
                      || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.outletId == resource.data.destinationOutletId
                      || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
        allow create: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
        allow update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' 
                                 || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.outletId == resource.data.sourceOutletId;
    }

    // Coupons are publicly readable.
    // Admins can create any coupon. Vendors can create coupons for their own products.
    match /coupons/{couponId} {
      allow read: if true;
      allow create, update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
                              || (request.resource.data.creatorType == 'vendor' && request.auth.uid == request.resource.data.creatorId);
    }
    
    // Notification subscriptions can be created by anyone, but not read publicly.
    match /notification_subscriptions/{subscriptionId} {
      allow create: if true;
      allow read, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // This collection is used for generating unique IDs and should not be publicly accessible.
    match /id_generator/{docId} {
        allow read, write: if false;
    }

    // Settings can be read by anyone, but only written by admins.
    match /settings/{settingId} {
        allow read: if true;
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}

    