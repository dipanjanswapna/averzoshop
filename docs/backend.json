
{
  "entities": {
    "user": {
      "title": "User",
      "description": "A user of the application.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "The URL of the user's profile picture."
        },
        "role": {
          "type": "string",
          "description": "The role of the user.",
          "enum": ["customer", "admin", "outlet", "vendor", "rider"]
        },
        "wishlist": {
            "type": "array",
            "description": "An array of product IDs that the user has added to their wishlist.",
            "items": {
                "type": "string"
            }
        }
      },
      "required": ["uid", "email", "role"]
    }
  },
  "auth": {
    "providers": ["google.com", "password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/user"
      },
      "description": "Stores user profile information, including their role and wishlist."
    }
  }
}
